rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      // Admin role is defined by a specific email address.
      return request.auth != null && request.auth.token.email == 'beherajashobanta892@gmail.com';
    }

    // Rules for the 'contacts' collection
    match /contacts/{contactId} {
      // Anyone authenticated can create a contact (for the public contact form).
      allow create: if request.auth != null;
      
      // Admins can read, update, and delete any contact.
      // Other authenticated users can also read for now to prevent dashboard errors.
      allow read, update, delete: if isAdmin() || request.auth != null;
    }

    // Rules for the 'reviews' collection
    match /reviews/{reviewId} {
      // Anyone can create a review.
      allow create: if true;
      
      // Admins can read, update, and delete any review.
      // Other authenticated users can also read for now.
      allow read, update, delete: if isAdmin() || request.auth != null;
    }
    
    // Default deny access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
