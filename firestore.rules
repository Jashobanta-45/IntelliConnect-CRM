rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin user
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'beherajashobanta892@gmail.com' ||
        request.auth.token.email == 'demo@example.com'
      );
    }
    
    // Allow public creation of contacts, but only admins can manage them
    match /contacts/{document=**} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // Allow public creation of reviews, but only admins can manage them
    match /reviews/{document=**} {
      allow create: if true; // Anyone can submit a review
      allow read, update, delete: if isAdmin();
    }

    // Default-deny all other collections/documents for safety
    match /{path=**}/documents/{document} {
      allow read, write: if false;
    }
  }
}
