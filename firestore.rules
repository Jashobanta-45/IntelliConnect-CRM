
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin emails
    function isAdmin() {
      return request.auth.token.email.lower() == "beherajashobanta892@gmail.com" ||
             request.auth.token.email.lower() == "demo@example.com";
    }

    // Rules for the reviews collection
    match /reviews/{reviewId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }
    match /reviews {
      allow list: if isAdmin();
    }

    // Rules for the contacts collection
    match /contacts/{contactId} {
       allow create: if request.auth != null;
       allow read, update, delete: if isAdmin();
    }
    match /contacts {
      allow list: if isAdmin();
    }
  }
}
