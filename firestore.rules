
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify admin users by email.
    function isAdmin() {
      return request.auth.token.email.lower() == "beherajashobanta892@gmail.com";
    }

    // Rules for the 'contacts' collection
    match /contacts/{contactId} {
      // Admins can perform any action on any contact.
      allow read, write: if isAdmin();
      
      // Any authenticated user can create a new contact.
      // The new data must have an 'ownerId' field equal to the user's UID.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      
      // Authenticated users can read, update, or delete only their own contacts.
      allow read, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Rules for the 'reviews' collection
    match /reviews/{reviewId} {
      // Anyone (authenticated or not) can create a new review.
      allow create: if true;
      
      // Only admins can read, update, or delete reviews.
      allow read, update, delete: if isAdmin();
    }
  }
}
