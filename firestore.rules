rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email.lower() == 'beherajashobanta892@gmail.com';
    }

    // Admins can read/write all contacts.
    // Regular users can create contacts, and can only read/update/delete their own.
    match /contacts/{contactId} {
      allow read, write: if isAdmin();
      allow create: if request.auth != null;
      allow get, update, delete: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }

    // Anyone can create a review. Only admins can read/manage them.
    match /reviews/{reviewId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
